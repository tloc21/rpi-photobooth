ScreenManager:
    StartScreen:
        id: start_screen
    TakePhotoScreen:
        id: photo_screen
    PreviewScreen:
        id: preview_screen

<StartScreen>
    id: start_screen
    name:'start_screen'
    BoxLayout:
        orientation: 'vertical'
        size: 800,400
        Button:
            id: start_button
            font_size: 80
            text: "Touch here to start"
            on_press: root.start_button_click()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .2
            Button:
                id: restart_button
                size_hint_x: .5
                text: 'Restart Me'
                on_release: root.restart_button_click()
            Button:
                id: reboot_button
                text: 'Reboot'
                size_hint_x: .5
                on_release: root.reboot_button_click()

<TakePhotoScreen>
    id: photo-screen
    name:'take_photo_screen'
    GridLayout:
        padding: '12dp'
        cols: 1
        size_hint: None, None
        pos: root.pos
        size: root.size
        separator_color: 47, 167, 212, 1.
        separator_height: 2


        Label:
            text: root.take_photo_title
            size_hint_y: None
            height: self.texture_size[1] + dp(16)
            font_size: 50
            text_align: 'center'
            canvas:
                Color:
                    rgba: [47 / 255., 167 / 255., 212 / 255., 1.]
                Rectangle:
                    pos: self.x, self.y + 2 / 2.
                    size: self.width, 2

        Label:
            font_size: root.take_photo_label_size
            text:root.take_photo_label



<PreviewScreen>
    id: preview_screen
    name:'preview_screen'
    GridLayout:
        cols: 2
        rows: 3
        Image:
            id: pic1
            source: '/home/wtb/photobooth_images/temp_photo1.jpg'
        Image:
            id: pic2
            source: '/home/wtb/photobooth_images/temp_photo2.jpg'
        Image:
            id: pic3
            source: '/home/wtb/photobooth_images/temp_photo3.jpg'
        Image:
            id: pic4
            source: '/home/wtb/photobooth_images/temp_photo4.jpg'
        Button:
            size_hint_y: 0.2
            text: 'Return to start'
            font_size: 30
            on_press: root.goto_start()
        Button:
            size_hint_y: 0.2
            text: 'Print'
            font_size: 30
            on_press: root.print_photos()
